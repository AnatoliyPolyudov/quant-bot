{
  "version": "2.0.0",
  "environment": "development",
  "data": {
    "WS_URL": "wss://ws.okx.com:8443/ws/v5/public",
    "RECONNECT_ATTEMPTS": 10,
    "RECONNECT_DELAY": 5,
    "CHANNELS": [
      "books",
      "trades",
      "tickers"
    ],
    "SYMBOL": "BTC-USDT-SWAP",
    "SYMBOLS": [
      "BTC-USDT-SWAP"
    ],
    "FEATURE_WINDOW": 50,
    "VOLATILITY_WINDOW": 30,
    "TARGET_HORIZON": 8,
    "TARGET_THRESHOLD": 0.01,
    "LOG_INTERVAL": 5,
    "MAX_RECORDS": 10000
  },
  "strategy": {
    "BASELINE_MIN_IMBALANCE": 0.58,
    "BASELINE_MIN_DELTA": 2,
    "BASELINE_MAX_SPREAD": 0.025,
    "BASELINE_MAX_VOLATILITY": 0.8,
    "BASELINE_MIN_CONFIDENCE": 60,
    "FEATURE_WEIGHTS": {
      "imbalance": 0.35,
      "delta": 0.25,
      "spread": 0.15,
      "volatility": 0.15,
      "funding": 0.1
    },
    "VOLATILE_MARKET_PARAMS": {
      "min_imbalance": 0.62,
      "min_delta": 3,
      "max_volatility": 0.6
    },
    "TRENDING_MARKET_PARAMS": {
      "min_imbalance": 0.56,
      "min_delta": 1,
      "max_volatility": 1.0
    },
    "NORMAL_MARKET_PARAMS": {
      "min_imbalance": 0.58,
      "min_delta": 2,
      "max_volatility": 0.8
    }
  },
  "model": {
    "MODEL_TYPE": "RandomForest",
    "MODEL_PATH": "models/quant_model.pkl",
    "METADATA_PATH": "models/model_metadata.pkl",
    "RANDOM_FOREST_PARAMS": {
      "n_estimators": 100,
      "max_depth": 10,
      "min_samples_split": 5,
      "random_state": 42
    },
    "MIN_TRAINING_RECORDS": 30,
    "TEST_SIZE": 0.2,
    "CROSS_VALIDATION_SPLITS": 5,
    "FEATURE_COLUMNS": [
      "order_book_imbalance",
      "spread_percent",
      "cumulative_delta",
      "funding_rate",
      "buy_trades",
      "sell_trades",
      "total_trades",
      "volatility"
    ],
    "MIN_PROBABILITY": 0.65,
    "CONFIDENCE_THRESHOLD": 0.7
  },
  "trading": {
    "ENABLED": false,
    "MODE": "paper",
    "INITIAL_BALANCE": 1000.0,
    "POSITION_SIZE": 0.1,
    "MAX_POSITION_SIZE": 0.3,
    "LEVERAGE": 3,
    "STOP_LOSS_PERCENT": 2.0,
    "TAKE_PROFIT_PERCENT": 3.0,
    "MAX_DRAWDOWN": 10.0,
    "TRADING_HOURS_START": "00:00",
    "TRADING_HOURS_END": "23:59",
    "CONFIDENCE_MULTIPLIERS": {
      "high_confidence": 1.0,
      "medium_confidence": 0.5,
      "low_confidence": 0.2
    }
  },
  "monitoring": {
    "HEALTH_CHECK_INTERVAL": 60,
    "PROGRESS_CHECK_INTERVAL": 120,
    "DATA_QUALITY_CHECK_INTERVAL": 300,
    "DATA_QUALITY_THRESHOLD": 50,
    "CONNECTION_QUALITY_THRESHOLD": "POOR",
    "MIN_ACTIVE_RECORDS": 10,
    "ENABLE_DETAILED_REPORTS": true,
    "SAVE_STATS_TO_FILE": true,
    "STATS_FILE": "data/system_stats.json"
  },
  "logging": {
    "CONSOLE_LEVEL": "INFO",
    "FILE_LEVEL": "DEBUG",
    "LOG_DIR": "logs",
    "MAIN_LOG_FILE": "quantum_bot.log",
    "ERROR_LOG_FILE": "errors.log",
    "DATA_LOG_FILE": "data_log.csv",
    "LOG_FORMAT": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "DATE_FORMAT": "%Y-%m-%d %H:%M:%S",
    "MAX_LOG_SIZE": 10485760,
    "BACKUP_COUNT": 5
  },
  "debug_mode": true,
  "dry_run": true
}